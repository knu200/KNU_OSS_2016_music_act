class Pelan extends JFrame{
	public static JPanel contentPane;
    private Graphics g;
	public Pelan(){
		//g.setColor(Color.blue);
		//g.fillOval(10, 10, E_RESIZE_CURSOR, HEIGHT);
        contentPane = new JPanel();// 创建面板
        contentPane.setBorder(new EmptyBorder(20, 20, 20, 20));// 设置边框
       // contentPane.paintComponents(g);
        add(contentPane);
        setSize(600,600);
	}
}
class Sample
{
	public Sample()
	{
		SampleListener listener = new SampleListener();
		Controller controller = new Controller();
		controller.addListener(listener);
		System.out.println("Press Enter to quit...");
		try
		{
			System.in.read();			
		}
		catch(IOException e)
		{
			e.printStackTrace();
		}
		
		controller.removeListener(listener);
	}

}
class SampleListener extends Listener
{
	Tool tool;
	Finger finger;
	public void onConnect(Controller controller)
	{
		System.out.println("Connected");
		controller.enableGesture(Gesture.Type.TYPE_SWIPE);
	}
	
	public void onFrame(Controller controller)
	{
		//System.out.println("Frame available");
		Frame frame = controller.frame();
		tool = frame.tools().get(0);
		finger = frame.hands().get(1).fingers().get(1);
		MainApp.window.motion.setX((int)tool.tipPosition().getX());
		MainApp.window.motion.setY((int)tool.tipPosition().getY());
		MainApp.window.frame.repaint();
//		System.out.println("Frame id: " + frame.id()
//							+ ", timestamp: " + frame.timestamp()
//							+ ", hands: " + frame.hands().count()
//							+ ", fingers: " + frame.fingers().count()
//							+ ", tools: " + frame.tools().count()
//							+ ", gestures: " + frame.gestures().count());		
//		
		
	}
	
}